                            <tr>
                                <th scope="row">验证码组成</th>
                                <td>
                                    @MVCHelper.H_Radios("VerifyForm_rad", "数字+英文|仅数字|仅英文".Split('|'), "4,2,3".Split(','), option.VerifyForm.ToString())
