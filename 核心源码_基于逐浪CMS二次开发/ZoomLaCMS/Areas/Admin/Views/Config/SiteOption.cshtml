                            <tr id="Tr5">
                                <th class="w12rem_lg" scope="row">选择默认语言 </th>
                                <td>
                                    @Html.DropDownList("languages", MVCHelper.ToSelectList("中国 - 简体中文|United States - English|France - Français|Россия - Русский|Deutschland|Italia - Italiano|日本 - 日本語".Split('|'),
