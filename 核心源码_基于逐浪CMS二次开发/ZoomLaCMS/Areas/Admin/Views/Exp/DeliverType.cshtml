@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 

}
@section head {<title>运费模板</title>}
@section content {
@Call.SetBread( new Bread[] {
    new Bread("{admin}"),
	new Bread(Call.PathAdmin("Product/ProductManage"),"商品管理"),
	new Bread(){url="", text="运费模板列表",addon="<a href='DeliverAdd'>[添加运费模板]</a>"}
	})
<div class="list_choice">
<table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td></td>
                <td>ID</td>
                <td>模板名称</td>
                <td>计价方式</td>
                <td>备注</td>
                <td>备注(仅卖家可见)</td>
                <td>操作</td>
            </tr>
        </thead>
    @foreach (DataRow dr in Model.dt.Rows)
    {
    <tr>
        <td><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
        <td>@dr["ID"]</td>
        <td><a href="DeliverTypeAdd?id=@dr["id"]">@dr["TlpName"]</a></td>
        <td>按件数</td>
        <td>@dr["Remind"]</td>
        <td>@dr["Remind2"]</td>
        <td>
            <a href="DeliverAdd?id=@dr["id"]"><i class="zi zi_pencilalt" title="修改"></i></a>
            <a href="javascript:;" onclick="mvcpage.del({url:'@("Deliver_API?action=del")',ids:'@dr["ID"]',confirm:'你确定将该数据删除吗'});"><i class="zi zi_trashalt" title="删除"></i>删除</a>
        </td>
    </tr>
    }
    </table>
}
</div>
    