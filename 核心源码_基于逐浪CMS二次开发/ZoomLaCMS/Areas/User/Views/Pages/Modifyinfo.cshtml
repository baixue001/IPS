@model ZoomLa.Model.Page.M_PageReg
@{
    
}
@section head{
    <title>注册企业黄页</title>
}
@section content{
    <div id="pageflag" data-nav="page" data-ban="page"></div>
	<div class="container">
	<nav aria-label="breadcrumb" role="navigation">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
		<li class="breadcrumb-item"><a href="@Url.Action("Default","Pages")">企业黄页</a></li>
		<li class="breadcrumb-item active">配置黄页</li>
	</ol>
	</nav>
	</div>
    <div class="container">
        <div class="us_seta">
            <form method="post" action="@Url.Action("Modifyinfo_Edit","Pages")">
			<div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <tr><td colspan="2" class="text-center">配置信息设置</td></tr>
                    <tr>
                        <td>黄页标题： </td>
                        <td>
                            @Html.TextBoxFor(Model => Model.PageTitle, new { @class = "form-control text_md" })
                        </td>
                    </tr>
                    <tr>
                        <td>菜单高度： </td>
                        <td>
						<div class="input-group">
                            @Html.TextBoxFor(Model => Model.NavHeight, new { @class = "form-control text_md" })
							<div class="input-group-prepend"> <span class="input-group-text" id="basic-addon1">px</span></div>
							</div>
                        </td>
                    </tr>
                    <tr>
                        <td>栏目背景图片： </td>
                        <td>
                            <table border='0' cellpadding='0' cellspacing='1' width='100%'>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(Model => Model.NavBackground, new { @class = "form-control text_md" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <iframe id="Iframe1" src="/Common/UserUpload?FieldName=NavBackground" marginheight="0" marginwidth="0" frameborder="0" width="100%" height="30" scrolling="no"></iframe>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>栏目背景颜色： </td>
                        <td>
                            @Html.TextBoxFor(Model => Model.NavColor, new { @class = "form-control text_md" })
                        </td>
                    </tr>
                    <tr>
                        <td>KeyWords关键字： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.Keyword, new { @class = "form-control text_md", @style = "height:40px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>Description内容： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.Description, new { @class = "form-control text_md", @style = "height:40px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>顶部HTML内容： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.TopWords, new { @class = "form-control", @style = "width:300px;height:80px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>尾部HTML内容： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.BottonWords, new { @class = "form-control", @style = "width:300px;height:80px;" })
                        </td>
                    </tr>
                    <tr>
                        <td class="btn_green text-center" colspan="2">
                            <input type="submit" class="btn btn-info" value="保存设置" />
                            <a href="@Url.Action("Default","Pages")" class="btn btn-outline-info">取消配置</a>
                        </td>
                    </tr>
                </table>
				</div>
            </form>
        </div>
    </div>
<script>
//导航处理
	$("#usernav1 ul li").removeClass("active").siblings().eq(4).addClass("active");
</script>
}
@section script{

}
