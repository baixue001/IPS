                            <a href="/Class_@Model.NodeID/Default" target="_blank" title="前台浏览">
                                <i class="fa fa-eye"></i>
                            </a>
                            <span onclick="opentitle('@(adminPath)content/Node/EditNode?NodeID=@(Model.NodeID)','配置本节点');" class="fa fa-cog" title="配置本节点" style="cursor:pointer;"></span>
                        }
               
