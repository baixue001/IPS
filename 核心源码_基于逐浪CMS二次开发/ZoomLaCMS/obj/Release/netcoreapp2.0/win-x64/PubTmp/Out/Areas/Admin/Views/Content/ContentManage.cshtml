    {
            <span class="pull-right visible-xs visible-sm" id="m_span"><input type="button" class="btn btn-success m_modal" onclick="opentitle('@(adminPath)/Content/Node/EditNode?NodeID=@Model.NodeID',' 配置本节点')" value="节点选择" /></span>
        }
        <span class="pull-right count">
            文章数：@Model.Count_WZS
            点击数：@Model.Count_DJS
        </span>
    </div>
    <form id="imp_form" method="post" enctype="multipart/form-data" action="@MVCHelper.GetAction("ContentManage_Import",Context.Request)" onsubmit="return ImportExcel();">
