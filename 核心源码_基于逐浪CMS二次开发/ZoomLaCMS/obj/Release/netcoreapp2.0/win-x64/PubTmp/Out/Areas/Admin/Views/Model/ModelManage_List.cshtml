@using System.Data;
@using ZoomLa.BLL.Helper
@using ZoomLa.BLL.SYS
@using System.Web
@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{


}

<table class="table table-striped table-bordered sysRow list_choice mb_8rem" id="EGV">
    <tr>
        <th>操作</th>
        <th>ID</th>
        <th>模型名称</th>
        <th>表名</th>
        <th>项目名称</th>
        <th>模型描述</th>
    </tr>
    @foreach (DataRow dr in Model.dt.Rows)
    {

        <tr>
            <td>
                <div class="btn-group">
                    <a class="dropdown-toggle" href="javascript:;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">操作<span class="caret"></span></a>
                    <div class="dropdown-menu">
                        <a href="Field?ID=@dr["ModelID"]&ModelType=@ViewBag.ModelType" class="dropdown-item"><i class="fa fa-th"></i> 字段</a>
                        <a href="ModelAdd?ID=@dr["ModelID"]&ModelType=@ViewBag.ModelType" class=" dropdown-item"><i class="fa fa-pencil"></i> 编辑</a>
                        <a href="javascript:;" class="dropdown-item" onclick="mvcpage.post({ url: 'Model_API?action=copy', data: {ids:'@dr["ModelID"]'},callback:'reload',confirm:'确定要复制该模型吗'});"><i class="fa fa-paste"></i> 复制</a>
                        <a href="javascript:;" class="dropdown-item" onclick="mvcpage.post({ url: 'Model_API?action=del', data: {ids:'@dr["ModelID"]'},callback:'reload',confirm:'确定要删除吗'});"><i class="fa fa-trash-o"></i> 删除</a>
                        @*<a href="ModelData?ID=@dr["ModelID"]" class="dropdown-item"><i class="fa fa-database"></i> 数据</a>*@
                    </div>
                </div>
            </td>
            <td>@dr["ModelID"]</td>
            <td>@dr["ModelName"]@*<%#GetModelIcon() %>*@</td>
            <td>@dr["TableName"]</td>
            <td>@dr["ItemName"]</td>
            <td>@dr["Description"]</td>
        </tr>
    }

</table>