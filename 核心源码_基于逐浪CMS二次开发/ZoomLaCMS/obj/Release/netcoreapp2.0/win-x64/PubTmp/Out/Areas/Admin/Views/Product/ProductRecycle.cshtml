@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 
    string apiUrl = "Product_API?action=";

}
@section head{<title>商品回收站</title>}
@section content{
@Call.SetBread(new Bread[] {
new Bread("{admin}"),
new Bread("ProductManage","商品管理"),
new Bread(Context.Request.RawUrl(),"回收站")
})
<div class="list_choice" style="width:100%;">
    <table class="table table-bordered table-striped" id="EGV_Table">
        <thead>
            <tr>
                <th class="w1rem"></th>
                <th class="w1rem">ID</th>
                <th style="width:90px;">商品图片</th>
                <th>商品名称</th>
                <th>录入者</th>
                <th>单位</th>
                <th>库存</th>
                <th>价格</th>
                <th>类型</th>
                <th>商品属性</th>
                <th>销售中</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        @Html.Partial("Product_List")
    </table>
    <div style="margin-top:5px;">
    <input type="button" ID="Rec_B" class="btn btn-outline-info" value="批量还原" onclick="mvcpage.bat({url:'@(apiUrl+"recover")'});"/>
    <input type="button" ID="Del_B" class="btn btn-outline-danger" value="批量删除" onclick="mvcpage.bat({url:'@(apiUrl+"del")',confirm:'确定要删除吗'});"/>
    <input type="button" ID="DelAll_B" class="btn btn-outline-danger" value="清空回收站" onclick="mvcpage.del({url:'@(apiUrl+"clear")',confirm:'确定要清空回收站吗'});"/>
</div>     
</div>

}
@section script{
<script>
function ShowPopover() { }
</script>
}