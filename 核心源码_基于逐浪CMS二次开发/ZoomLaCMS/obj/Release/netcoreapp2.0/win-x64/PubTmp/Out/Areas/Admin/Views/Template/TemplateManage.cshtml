            </table>
            <table class="table table-striped table-bordered">
                <tr>
                    <th scope="col">操作</th>
                    <th>名称</th>
                    <th scope="col">类型</th>
                    <th scope="col">修改时间</th>
                </tr>
                @foreach (DataRow dr in dt.Rows)
    {
            <tr>
                <td class="text-center">
                    <div class="option_area dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">操作<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @if (!IsFolder(dr)){ <li class="dropdown-item"><a href="javascript:;" data-cmd="DownFiles"><i class="fa  fa-download"></i> 下载</a></li>}
                            @*CommandName='<%#Eval("type") == "1" ? "DelDir":"DelFiles" %>'*@
                            <li class="dropdown-item"><a onclick="return confirm('你确认要删除该文件夹或文件吗？')"> <i class="fa fa-trash-o"></i> 删除</a></li>
                            @*CommandName='<%#Eval("type") == "1" ? "CopyDir":"CopyFiles" %>'*@
                            @if (!IsFolder(dr)){<li class="dropdown-item"><a> <i class="fa fa-copy"></i> 复制</a></li>}
                        </ul>
                    </div>
                </td>
                <td class="text-left">
                    <i class="@(DataConverter.CStr(dr["type"])=="1"?"fa fa-folder name_ico_c":"fa fa-file-text name_ico_c")"></i>
                    <a href="javascript:;">@dr["Name"]</a>
                </td>
                <td>
                    @(DataConverter.CStr(dr["type"]) == "1"?"文件夹":dr["content_type"])
                </td>
                <td>@DateHelper.ToDate(dr["lastWriteTime"])</td>
            </tr>
}
