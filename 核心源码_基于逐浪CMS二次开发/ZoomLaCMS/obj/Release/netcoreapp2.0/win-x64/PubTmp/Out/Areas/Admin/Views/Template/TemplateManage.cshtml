            var url = "TemplateManage?setTemplate=@HttpUtility.UrlEncode(TemplateDir)&dir=" + dir + encodeURI(fname);
            location = url;
        }
        else {
            if (fname.indexOf(".") < 0) {  }
            var exname = GetExName(fname).toLowerCase();
