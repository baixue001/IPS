    @foreach (DataRow dr in Model.dt.Rows)
    {
        <tr>
            <td> <input name="idchk" type="checkbox" title="全选" value="@dr["AdminID"]" /></td>
            <td>@dr["AdminId"]</td>
            <td>@(DataConverter.CLng(dr["IsLock"]) == 1 ? "锁定" : "正常")</td>
            <td><a href="AdminAdd?id=@dr["AdminId"]">@dr["AdminName"]</a></td>
